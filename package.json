	"lint-staged": {
		"*.{js,ts,tsx}": "eslint --cache --fix --ignore-path .eslintignore",
		"*.{css,md}": "prettier --write --ignore-path .eslintignore"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
