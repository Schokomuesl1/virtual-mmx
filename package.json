	"scripts": {
		"bundle": "webpack",
		"test": "jest",
		"dev": "webpack-dev-server --env development --port 3000 --hot",
		"start": "webpack-dev-server --env development --port 3000 --hot --open",
		"build": "webpack --env production",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d dist",
		"check-types": "tsc",
		"cypress:open": "cypress open"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
